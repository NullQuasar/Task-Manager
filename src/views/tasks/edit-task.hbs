
<div class="col-md-3 mx-auto">
    <div class="card rounded-top border border-primary text-center">
        <div class="card-header">
            <h4 class="card-title">Edit "{{task.title}}"</h4>
        </div>
        <div class="card-body">
            <form action="/tasks/edit/{{task._id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" value="{{task.title}}" autofocus>
                </div>
                <div class="form-group my-2">
                    <textarea name="description" class="form-control">{{task.description}}</textarea>
                </div>
                <div class="form-group">
                    <input type="date" name="deadline" class="form-control" value="{{task.deadline}}">
                </div>
                <div class="form-group mt-3">
                    <input type="hidden" name="_method" value="PUT"/>
                    <button class="btn btn-primary btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>