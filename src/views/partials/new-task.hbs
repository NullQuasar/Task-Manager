
<div class="col-md-3">
    <div class="card rounded-top border border-primary text-center">
        <div class="card-header">
            <h4 class="card-title">New Task</h4>
        </div>
        <div class="card-body">
            <form action="/tasks/create" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>
                <div class="form-group my-2">
                    <textarea name="description" placeholder="Task description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <input type="date" name="deadline" class="form-control">
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-primary btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>