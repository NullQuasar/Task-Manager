<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card sign-card">
            <div class="card-header">
                <h3 class="card-title">Login</h4>
            </div>
            <div class="card-body">
                <form action="/users/signin" method="post">
                    <div class="form-group my-2">
                        <input type="email" class="form-control" name="email" value="{{email}}" placeholder="Email" autofocus>
                    </div>
                    <div class="form-group mb-2">
                        <input type="password" class="form-control" name="passw" value="{{passw}}" placeholder="Password">
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-block my-3" type="submit">
                            Enter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>